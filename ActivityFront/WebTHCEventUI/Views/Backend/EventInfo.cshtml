@*@model System.Data.DataTable*@

@using System.Data;
@using System.Collections.Generic;
@using System.Collections.Specialized;

@{
    Layout = "~/Views/Shared/_THCBackend.cshtml";
}

@{
    DataTable Data = ViewBag.Data;
    var EventNo = "";
    if (Data.Rows.Count > 0)
    {
        EventNo = Data.Rows[0]["AE002"].ToString();
    }
}

<div class="container-fluid">

    <div style="width:100%;padding-top:10px;">
        <div>
            <strong class="event-title"> 活動管理   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img id="img_bar" src="~/img/progress_bar.gif" style="height:18px;display:none;"></strong>
            <hr class="style2" />
        </div>
    </div>
    <div id="div_content" class="panel panel-info" style="display:block;">
        <div class="panel-heading">
            <div class="panel-title pull-left">xxxxxxx</div>
            
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">

            <form id="form1" class="form" action="" role="form">
                <!--data-toggle="validator" -->

                <div class="row">
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_account">活動代碼</label>
                        <input type="text" class="form-control" id="txt_event_no" name="txt_event_no" maxlength="20" data-error="lan.Error_Event_No" value="@EventNo">
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_name">活動名稱</label>
                        <input type="text" class="form-control" id="txt_event_name" name="txt_event_name" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_vender">活動廠商</label>
                        <input type="text" class="form-control" id="txt_vender" name="txt_vender" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>                     
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_account">開始日期</label>
                        <input type="text" class="form-control" id="txt_event_no" name="txt_event_no" maxlength="20" data-error="lan.Error_Event_No" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_name">結束日期</label>
                        <input type="text" class="form-control" id="txt_event_name" name="txt_event_name" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_vender">發碼數量</label>
                        <input type="text" class="form-control" id="txt_vender" name="txt_vender" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_account">商品系列</label>
                        <input type="text" class="form-control" id="txt_event_no" name="txt_event_no" maxlength="20" data-error="lan.Error_Event_No" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_name">活動網址</label>
                        <input type="text" class="form-control" id="txt_event_name" name="txt_event_name" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_vender">活動類型</label>
                        <input type="text" class="form-control" id="txt_vender" name="txt_vender" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_account">活動備註</label>
                        <input type="text" class="form-control" id="txt_event_no" name="txt_event_no" maxlength="20" data-error="lan.Error_Event_No" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_name">QR長度</label>
                        <input type="text" class="form-control" id="txt_event_name" name="txt_event_name" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group col-md-4 form-inline">
                        <label for="txt_vender">活動網頁</label>
                        <input type="text" class="form-control" id="txt_vender" name="txt_vender" maxlength="20" data-error="lan.Error_Event_Name" required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>

            </form>

        </div>
    </div>

</div>