
@{    
    Layout = "~/Views/Shared/_THCUI.cshtml";
}

<style>
    .Label {
        font-size:x-large;
        margin-top:5px;
        margin-bottom:5px;
        color:black;
    }
</style>

<body class=" bg5">
    <div id="page ">

        <nav id="menu">
        </nav>
        <div class="header-bar">
        </div>
        <div class="content">

            <div class="logo w50">
                <img src="~/images/Logo_sm.png" class="logo-sm" />
            </div>          
            <section id="msg">
                <div class="container">
                                       
                    <div class="row">
                        <div class="col-md-12" style="width:50%;margin:0px auto;border: 2px #6E6E6E ;border-style: solid;text-align:center; vertical-align:middle; font-size:1.5em;padding:10px;color: #595959">
                            <img src="~/@ViewBag.RWD_IMG" style="width:100px;height:130px;" />
                        </div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <dir class="row">                        
                        <div class="col-xs-12" style="display:inline-block;text-align:center;">
                            <div style="font-size:large;color:black;">
                                中獎序號已傳送至 <br />
                                <label class="Label">@ViewBag.MOBIL</label>
                                <br />
                            </div>                           
                        </div>
                    </dir>

                    <div class="row">                        
                        <div class="col-xs-12" style="display:inline-block;text-align:center;">
                            <div style="font-size:large;color:black;">
                                中獎序號 <br />
                                <label class="Label">@ViewBag.RWD_COUPNUMBER</label>                               
                                <br />
                            </div>                            
                        </div>
                    </div>

                    <dir class="row">                        
                        <div class="col-xs-12" style="display:inline-block;text-align:center;">
                            <div style="font-size:large;color:black;">
                                序號期限 <br />
                                <label class="Label">@ViewBag.RWD_DATE</label> 
                            </div>
                        </div>
                    </dir>

                </div>

            </section>

            <div class="row" style="position:fixed; bottom: 5%; width: 100%;">
                <div class="col-xs-8 col-xs-offset-2">
                    <button type="button" class="form-control ok-btn" onclick="done();">完成</button>
                </div>
            </div>


        </div>
    </div>

    <script>

    var acc = '';
    var evt = '';
    var tk = '';
    var m = '';

    $(document).ready(function () {

        @{
                if (!string.IsNullOrEmpty(ViewBag.ACC))
                {
                    <text>
        acc = '@ViewBag.ACC';
        </text>
                }

                if (!string.IsNullOrEmpty(ViewBag.EVENT))
                {
                    <text>
        evt = '@ViewBag.EVENT';
        </text>
                }

                if (!string.IsNullOrEmpty(ViewBag.TICKET))
                {
                    <text>
        tk = '@ViewBag.TICKET';
        </text>
                }

                if (!string.IsNullOrEmpty(ViewBag.MOBIL))
                {
                    <text>
        m = '@ViewBag.MOBIL';
        </text>
                }
         }


    });

    function done() {
        window.location.href = '@ViewBag.DOMAIN' + '?acc=' + acc + '&evt=' + evt + '&tk=' + tk;       
    }

</script>

</body>