
@{    
    Layout = "~/Views/Shared/_THC.cshtml";
}
@model System.Data.DataTable
@using System.Data;
@using System.Collections.Generic;

<style>
    #scroll::-webkit-scrollbar {
        width: 8px;
    }

    #scroll::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        border-radius: 10px;
    }

    #scroll::-webkit-scrollbar-thumb {
        border-radius: 10px;
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
    }
</style>

<div class="content inputcontent text-center">
    <div style="clear:both"></div>
    <h3 class="blk">線上活動</h3>
    <div class="listpanel" id="scroll" style="height:575px;overflow-x:hidden ;overflow-y: scroll;border: 1px solid #fff;">
        <div>

            <div>

                @{
                    if (Model != null)
                    {
                        foreach (DataRow row in @Model.Rows)
                        {
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="listheader_2">
                                        <div class="title col-xs-9">@row["AE003"]</div>
                                        <div class="link col-xs-3"><a href="@Url.Content("~/")App/ActivityDesc?page=@row["AE013"]">詳細內容</a></div>
                                    </div>
                                    <div class="listcontent">
                                        <div class="thumb"><img src="~/images/activity.png" /></div>
                                        <div class="description">
                                            活動期間 @row["AE005"] ~ @row["AE006"] <br />
                                            活動系列 @row["AE008"]<br />
                                            活動內容 @row["AE011"]
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }

            </div>

        </div><!--end listpanel-->
    <!--
    <div style="clear:both;"></div>
    <div class="row" id="div_botton">
        <div class="col-xs-10 col-xs-offset-1">
            <button class="form-control qpid-btn">OK</button>
        </div>
    </div>
    -->

    <div style="clear:both;"></div>
    </div>
</div>

<script>

    $(document).ready(function () {


        var screenHigth = (typeof window.outerHeight != 'undefined') ?
            Math.max(window.outerHeight, $(window).height()) : $(window).height();

        var fixedHeader = $("#div_header").height();

        var title = $(".blk").height();

        var contentHeight = screenHigth - fixedHeader - title - 50;

        $("#scroll").height(contentHeight + 'px');


    });



</script>